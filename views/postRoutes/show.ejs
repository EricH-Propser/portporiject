 <% include ../partials/header.ejs %>
    
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">OpenKey</p>
            <div class="list-group">
                <li class="list-group-item active"><%=post.type %></li>
                <li class="list-group-item">ID: <%=post._id %></li>
                <li class="list-group-item">User ID: <%=post.author.id %></li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= post.image %>">
                <div class="caption-full">
                    <h4 class="pull-right"></h4>
                    <h4><a><%=post.name%></a></h4>
                    <p><%= post.info %></p>
                    Members:
                    <%for(x=0;x<post.members.length;x++){ %>
                    
                   <a href="/profile/<%=post.members[x]._id%>"><%=post.members[x].username%></a> 
                    <% }%>
                    <p>Members <%=post.members.length %>/<%=post.orginneed %></p>
                    <p>
                        <a href="/profile/<%=post.author.id%>"><em>Submitted By <%= post.author.username %></em></a>
                    </p>
                    
                    <% if(currentuser && post.author.id.equals(currentuser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/posts/<%= post._id %>/edit">Edit</a>
                        <form id="delete-form" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                        <a class="btn btn-sm btn-success" href="/post/<%= post._id %>/invite">Invite new members</a>
                         
                </div>
            </div>
        </div>
    </div>
</div>

                    <% }else{ %>
                    <a href="/profile/<%=post.author.id %>/newmessage" class="btn-sm btn btn-primary ">Message User</a><br>
                    <a href="/post/<%= post._id %>/requestinvite" class="btn-sm btn btn-success ">Request Invite</a><br>
                    <% } %>
              
<% include ../partials/footer.ejs %>